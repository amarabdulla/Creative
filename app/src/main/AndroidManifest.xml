<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mazyoona">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        tools:replace="android:icon,android:theme"
        android:largeHeap="true"
        android:theme="@style/SampleTheme" >


        <activity
            android:name="com.mazyoona.WelcomeActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mazyoona.SplashActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashTheme">

        </activity>

        <activity android:name="com.mazyoona.ProductDescriptionPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.Entry"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.Activity_Login"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.Activity_Register"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.HomePage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.mazyoona.ProductPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.AboutUs"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.ContactUs"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.Faq"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.SpecialOfferPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"  />
        <activity android:name="com.mazyoona.ShoppingCart"
            android:configChanges="orientation"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity android:name="com.mazyoona.DesignerList"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.ChangeShippingAddressPage"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.PaymentPage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.ProfilePage"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.ShippingPage"
            android:windowSoftInputMode="stateHidden"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

        <service
            android:name="com.paypal.android.sdk.payments.PayPalService"
            android:exported="false" />

        <activity android:name="com.paypal.android.sdk.payments.PaymentActivity" />
        <activity android:name="com.paypal.android.sdk.payments.LoginActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentMethodActivity" />
        <activity android:name="com.paypal.android.sdk.payments.PaymentConfirmActivity" />

        <activity
            android:name="io.card.payment.CardIOActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity android:name="io.card.payment.DataEntryActivity" />
        <activity
            android:name="com.paypal.android.MEP.PayPalActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name="com.mazyoona.ConfirmationActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.ProductsDetailActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.cart.LoginEmptyCartActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.ForgotPassword"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.PrivacyPolicy"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.TermsAndCondition"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.PasswordChange"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.SearchActivityServer"
            android:configChanges="orientation"
            android:windowSoftInputMode="stateHidden"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.ProfileUpdate"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.DesignerDetailActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.OrderList"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.MainActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name="com.mazyoona.DetailsActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>
