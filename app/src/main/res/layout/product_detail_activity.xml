<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gridview_bg_new" >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:background="@drawable/header"
            android:layout_width="match_parent"
            android:layout_height="64dp">


        </android.support.v7.widget.Toolbar>
    </LinearLayout>

    
    <ImageView
        android:id="@+id/detail_img"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginTop="@dimen/space_15"
        android:src="@drawable/c_1" />

    <TextView
        android:id="@+id/detail_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:text="TextView" />
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/space_5"
        android:layout_height="wrap_content" >
        
         <TextView
        android:id="@+id/detail_model"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
             android:textStyle="bold"
        android:text="model: "
        android:textSize="22dp" />

    <TextView
        android:id="@+id/detail_avail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginLeft="8dp"
        android:layout_below="@id/detail_model"
        android:text="availability" 
        android:textSize="20dp"/>


        <TextView
            android:id="@+id/detail_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="8dp"
            android:layout_below="@id/detail_model"
            android:text="price"
            android:textColor="@color/orangered"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/detail_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="147dp"
            android:text="Ex Tax"
            android:textSize="20sp"
            android:textColor="@color/grey"/>



</RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/detail_qty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Qty: "
            android:textStyle="bold" 
            android:layout_marginLeft="30dp"/>

        <Spinner
            android:id="@+id/detail_edt_qty"
            android:layout_width="85dp"
            android:layout_height="25dp"
    >
            </Spinner>


    </LinearLayout>

     <Button
            android:id="@+id/detail_buy"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_selector_cart"
            android:padding="5dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/buy_now"
            android:textSize="25sp"
            android:textColor="@color/white" 
            />

        <Button
            android:id="@+id/detail_add"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_selector_save"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center_horizontal"
            android:text="@string/add_to_cart"
            android:textSize="25sp"
            android:textColor="@color/white" />
    <TextView
        android:id="@+id/detail_des"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="5dp"
        android:text="Description" />
   
<TextView
        android:id="@+id/detail_line_2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:text="TextView" />

</LinearLayout>
</ScrollView>