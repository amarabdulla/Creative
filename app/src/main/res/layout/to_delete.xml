<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomePage">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@drawable/header"
            android:minHeight="?attr/actionBarSize">

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/space_20"
                android:src="@drawable/ic_drawer" />
        </android.support.v7.widget.Toolbar>
    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_50"
        android:layout_marginTop="@dimen/space_70"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_25">


                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="385dp"
                    android:layout_height="174dp"
                    android:layout_alignParentTop="true"
                    android:paddingLeft="@dimen/space_8"
                    android:paddingRight="@dimen/space_8" />

                <com.viewpagerindicator.CirclePageIndicator
                    android:id="@+id/indicator"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="125dp"
                    android:padding="10dip"
                    app:centered="true"
                    app:fillColor="#ff0099"
                    app:pageColor="#F2F2F2"
                    app:snap="false" />
            </RelativeLayout>

            <FrameLayout
                android:id="@+id/welcome"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_marginBottom="@dimen/space_15"
                android:layout_marginTop="@dimen/space_15"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/button3"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:paddingLeft="@dimen/space_10"
                    android:text="@string/browse_by_category"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/see_all"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:paddingRight="@dimen/space_8"
                    android:text="@string/see_all"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </FrameLayout>

            <com.slidingimages.ExpandableHeightGridView
                android:id="@+id/gridView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:clickable="false"
                android:columnWidth="190dp"
                android:focusable="false"
                android:gravity="center"
                android:horizontalSpacing="20dp"
                android:numColumns="2"
                android:paddingLeft="@dimen/space_8"
                android:paddingRight="@dimen/space_8"
                android:stretchMode="columnWidth"
                android:verticalSpacing="10dp">

            </com.slidingimages.ExpandableHeightGridView>

        </LinearLayout>
    </ScrollView>

    <FrameLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/coordinator"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <com.aurelhubert.ahbottomnavigation.AHBottomNavigation
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/white" />

    </FrameLayout>


    <include layout="@layout/navigation_drawer" />
</android.support.v4.widget.DrawerLayout>
